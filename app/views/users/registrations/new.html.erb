<div class="container form-container">

  <div class="header">
    <h2>Sign up</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="six columns">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: 'u-full-width' %>
      </div>

      <div class="six columns">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'u-full-width' %>
      </div>
    </div>

    <div class="row">
      <div class="six columns">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'u-full-width' %>
      </div>

      <div class="six columns">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'u-full-width' %>
      </div>
    </div>

    <div class="row">
      <%= f.submit "Sign up", class: 'button-primary' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>

</div>